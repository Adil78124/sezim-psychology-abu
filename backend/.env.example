# Supabase Configuration
# Получите эти ключи в вашем проекте Supabase: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here

# Telegram Bot Configuration
# Создайте бота через @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Admin API Key
# Используйте для защиты административных endpoints
ADMIN_API_KEY=your-secure-admin-api-key-here

# SMTP Configuration (Email)
# Для Gmail: включите двухфакторную аутентификацию и создайте App Password
# https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here
EMAIL_FROM=your-email@gmail.com

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# JWT Secret (для аутентификации админов)
JWT_SECRET=your-jwt-secret-key-change-in-production
