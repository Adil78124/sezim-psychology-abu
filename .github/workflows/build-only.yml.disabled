name: Build Frontend Only

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          cache: 'npm'
          
      - name: Install dependencies
        run: npm ci
        
      - name: Verify public folder
        run: |
          echo "📁 Checking public folder contents:"
          ls -la public/
          echo ""
          echo "📄 Checking if index.html exists:"
          if [ -f "public/index.html" ]; then
            echo "✅ index.html found in public/"
            head -5 public/index.html
          else
            echo "❌ index.html NOT found in public/"
            exit 1
          fi
        
      - name: Build
        run: npm run build
        
      - name: Verify build output
        run: |
          echo "📁 Checking build folder contents:"
          ls -la build/
          echo ""
          echo "📄 Checking if index.html exists in build:"
          if [ -f "build/index.html" ]; then
            echo "✅ index.html found in build/"
            head -5 build/index.html
          else
            echo "❌ index.html NOT found in build/"
            exit 1
          fi
        
      - name: Upload build artifacts
        uses: actions/upload-artifact@v4
        with:
          name: frontend-build
          path: build/
          retention-days: 30
          
      - name: Build completed
        run: |
          echo "✅ Frontend build completed successfully!"
          echo "📁 Build artifacts uploaded"
          echo ""
          echo "🚀 Deployment options:"
          echo "1. Download artifacts from this run"
          echo "2. Use Vercel - connect repository to Vercel"
          echo "3. Use Netlify - connect repository to Netlify"
          echo "4. Manual upload to your server"
          echo ""
          echo "📋 Next steps:"
          echo "1. Configure Supabase Dashboard"
          echo "2. Run SQL script from supabase-setup.sql"
          echo "3. Test the application"
